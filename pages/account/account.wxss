.body {
  height: 100%;
  background: #fff;
  color: #525a66;
  font-family: Helvetica Neue, Helvetica, STHeiTi, sans-serif;
  font-size: 14px;
   
}

.bg_grey {
  background: #f7f8fa;
   overflow:hidden;
}

.ava {
  height: 120px;
  background: #1cc6a3;
  width: 100%;
  padding: 10px 0;
  color: #fff;
}

.ava-left {
  float: left;
  padding-left: 15px;
}

.ava-left .p {
  height: 40px;
  line-height: 40px;
}

.ava-left .p-jine {
  font-size: 20px;
}

.ava-right {
  width: 80px;
  float: right;
  margin-top: 50px;
  margin-right: 30px;
  text-align: center;
}

.ava-right .recharge {
  border-radius: 5px;
  background: #f90;
  padding: 6px 20px;
  color: #fff;
}

.mingxi-bt {
  padding: 0 15px;
  height: 40px;
  line-height: 40px;
  background: #fff;
  border-bottom: 1px solid #e5e5e5;
}

.xjls_con {
  padding: 15px;
}

.mx-right .fgreen {
  font-size: 14px;
  color: #1cc6a3;
  padding-top: 10px;
}

.time-biaoji {
  display: block;
  width: 10px;
  height: 10px;
  background: #f90;
  border-radius: 50%;
  position: absolute;
  right: -6px;
  top: 50%;
  margin-top: -13px;
}

.mingxi .li {
  width: 100%;
  height: auto;
  display: block;
  float: left;
}

.years {
  color: #1cc6a3;
  height: 30px;
  line-height: 30px;
}

.years .p {
  width: 50px;
  border-right: 2px solid #aaa;
  font-size: 16px;
}

.mx-left {
  width: 50px;
  height: 50px;
  line-height: 20px;
  padding: 10px 0;
  position: relative;
  border-right: 2px solid #aaa;
  float: left;
}

.mx-right {
  background: #fff;
  margin-left: 70px;
  height: 60px;
  padding-left: 10px;
  line-height: 20px;
}

.years .p {
  width: 50px;
  border-right: 2px solid #aaa;
  font-size: 16px;
}

.mx-day {
  font-weight: bold;
}

.top-biao {
  background: url(http://m.yihu365.com/images/biao.png) no-repeat 44px 0;
  background-size: 16px;
  height: 15px;
  width: 100%;
}

.fl {
