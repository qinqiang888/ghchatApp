/* drawbackInfo.wxss */
.drawbackInfo {
  background: #fff;
  width: 100%;
  height: 100%;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 10000;
}

.tguize {
  padding: 40px 15px 15px;
  font-size: 15px;
}

.tguize .li {
  line-height: 24px;
  position: relative;
  padding-left: 30px;
  padding-bottom: 5px;
}

.tguize .li text {
  position: absolute;
  display: block;
  top: 0;
  left: 5px;
}

.beizhu {
  color: #999;
  font-size: 13px;
  padding-left: 5px;
  line-height: 22px;
}

.close {
  display: block;
  position: fixed;
  right: 15px;
  top: 15px;
  background: url(http://m.yihu365.com/images/close.png) no-repeat 0 0/100%;
  width: 15px;
  height: 15px;
}