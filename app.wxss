/*bootom*/

.bottom {
  width: 100%;
  height: 68px;
  overflow: hidden;
}

.bottom-cont {
  background: #fff;
  padding: 15px 0;
  border-top: 1px solid #e6e6e6;
  height: 37px;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 99%;
  text-align: right;
  padding-right: 1%;
  z-index: 1000;
}

.bottom-cont view {
  padding: 0 14px;
  height: 35px;
  line-height: 35px;
  border-radius: 4px;
  border: 1px solid #999;
  display: inline-block;
  margin-right: 10px;
  background: #fff;
  margin-left: -5px;
}

.bottom-cont view.cur {
  border: 1px solid #1cc6a3;
  background: #1cc6a3;
  color: #fff;
}
