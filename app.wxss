/**app.wxss**/

.container {
  height: 100%;
  box-sizing: border-box;
  font-family: 'Microsoft YaHei';
  font-size: 14px;
  color: #525a66;
}

view {
  display: block;
}

modal {
  position: relative;
}

modal .center {
  text-align: center;
}

/**{ margin:0; padding:0}*/

em, i {
  font-style: normal;
}

ul, li, dl {
  list-style: none;
}

h1, h2, h3, h4, h5, b {
  font-weight: normal;
}

.fl {
  float: left;
}

.fr {
  float: right;
}

img {
  display: block;
  border: 0;
}

a, a:visited {
  color: #525a66;
  text-decoration: none;
}

body {
  font-size: 14px;
  background: #f0f2f5;
  color: #525a66;
  font-family: Microsoft YaHei;
}

/*.clearfix{*zoom:1}*/

.clearfix:before, .clearfix:after {
  display: table;
  line-height: 0;
  content: "";
}

.clearfix:after {
  clear: both;
}

input[type=submit], input[type=reset], input[type=button], button {
  -webkit-appearance: none;
}

input {
  outline: none;
}

input[type="text"] {
  border: none;
  outline: medium;
}

.botm-btn {
